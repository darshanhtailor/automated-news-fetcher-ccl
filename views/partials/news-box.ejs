<style>
    .box{
        display: inline-block;
        height: 400px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .box img{
        width: 100%;
        height: 40%;
        object-fit: cover;
    }

    .content{
        height: 53%;
        margin: 10px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .box h2{
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .description{
        margin-top: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .fulllink{
        float: right;
    }

    .meta{
        margin-top: auto;
    }
</style>
<div class="box">
    <img src="<%= imgUrl %>" onerror="altImage()">
    <div class="content">
        <h2 class="title"><%= title %></h2>
        <p class="description"><%= description %></p>
        <div class="meta">
            <span class="time"><%= publishedAt %></span>
            <span class="fulllink"><a href="<%= url %>">Read more</a></span>
        </div>
    </div>
</div>
<script>
    function altImage() {
        document.getElementById('newImg').src = 'https://images.unsplash.com/photo-1588681664899-f142ff2dc9b1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1074&q=80'
    }
</script>